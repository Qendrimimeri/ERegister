    <script>
        $(function () {
            $("#SearchBtn").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Crm/AutoComplete/',
                        data: { "prefix": request.term, "id": @userMuniId, "role": "@userRole" },
                        type: "POST",
                        success: function (data) {
                            response($.map(data, function (item) {
                                console.log(item.val)
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    let userId  = i.item.val;
                    let table = $("#Tables");
                    $.ajax({
                        url: "/Crm/Voters?userId=" + userId,
                        type: "GET",
                        data: {},
                        success: function (data) {
                            table.empty(data)
                            table.append(data);
                        }
                    });
                },
                minLength: 1
            });
        });

        const input = document.getElementById('SearchBtn');
        input.addEventListener('keypress', event => {
            if (event.key == 'Enter') {
                document.getElementById('butoni').click();
            }
        })

        function SetVoters() {
            let name = $('#SearchBtn').val();
            console.log(name)
            let table = $("#Tables");
            $.ajax({
                url: "/Crm/Voters?name=" + name,
                type: "GET",
                data: {},
                success: function (data) {
                    table.empty(data)
                    table.append(data);
                }
            });
        }
    </script>
