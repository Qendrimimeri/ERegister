@model VoterDetailsVM

    <div class="d-flex flex-row justify-content-between flex-lg-row flex-column">
   
      <div class="col-lg-6 pe-2">
            <div class="table-responsive">
                <table class="table table-bordered"
                       id="dataTable"
                       width="100%"
                       cellspacing="0"
                 style="table-layout:fixed">
                    <tr>
                        <td width = "50%" >Emri dhe mbiemri</td>

                        <td width = "50%" id="DataSearching">@Model.FullName</td>
                    </tr>
                    <tr>
                        <td>Fshati</td>
                        <td id="DataSearching">@Model.Village</td>
                    </tr>
                    <tr>
                        <td>Lagja</td>
                        <td id="DataSearching">@Model.Neigborhood</td>
                    </tr>
                    <tr>
                        <td>Blloku</td>
                        <td id="DataSearching">@Model.Block</td>
                    </tr>
                    <tr>
                        <td>Hyrja </td> 
                        <td id="DataSearching">@Model.HouseNo</td>
                    </tr>
                    <tr>
                        <td>Numri i telefonit </td>
                        <td id="DataSearching">@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <td>Email adresa</td>
                        <td id="DataSearching">@Model.Email</td>

                    </tr>
                    <tr>
                        <td>Facebook</td>
                        <td id="DataSearching"><a href="@Model.FacebookLink">@Model.FullName<a /></td>
                    </tr>
                </table>
            </div>
          
        </div>
        <style>
            td {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
        </style>
        <div class="col-lg-6 pe-2">
            <div class="table-responsive">
                <table class="table table-bordered"
                       id="dataTable"
                       width="100%"
                       cellspacing="0"
                style = "table-layout:fixed">
                    <tr>
                        <td width = "50%">Numri i familjarëve</td>
                        <td width = "50%" id="DataSearching">@Model.VotersNumber</td>
                    </tr>
                    <tr>
                        <td>Votues paraprak</td>
                        <td id="DataSearching">@Model.PreviousVoter</td>
                    </tr>
                    <tr>
                        <td>Votues i tanishëm</td>
                        <td id="DataSearching">@Model.CurrentVoter</td>
                    </tr>
                    <tr>
                        <td>Gjasat e suksesit</td>
                        <td id="DataSearching">@Model.InitialChance</td>
                    </tr>
                    <tr>
                        <td>Vendi i punës</td>
                        <td id="DataSearching">@Model.WorkPlace</td>
                    </tr>
                    <tr>
                        <td>Statusi administrativ</td>
                        <td id="DataSearching">@Model.AdministrativeUnit</td>
                    </tr>
                    <tr>
                        <td>Pozita</td>
                        <td id="DataSearching">@Model.Duty</td>
                    </tr>
                    <tr>
                        <td>Qendra e votimit</td>
                        <td id="DataSearching">@Model.PollCenter</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    
    <div class="d-flex flex-row align-content-around flex-md-row flex-column">
        <div class="col-md-6 mb-2 pe-2">
            <label class="pt-3">Zgjedh/Shto një arsye përcaktuese </label>
            <select class="form-select" id="generaldemand" asp-items="@ViewBag.ArysjetPercaktues">
              @*  <option disabled selected>Arsyeja percaktuese</option>*@
                <option value="shto">Shto +</option>
            </select>
        </div>
        <div class="col-md-6 mb-2 pe-2">
            <label class="pt-3">A mund ta menaxhoni personin?</label>
            <select class="form-select" id="inputGroupSelect02">
                <option disabled selected>Zgjedhni opsionet...</option>
                <option value="1">Po</option>
                <option value="1">Jo</option>
            </select>
        </div>
    </div>
    <div class="form-group pe-2">
        <label class="pt-3" for="AktivitetePerNdryshim">Aktivitetet që planifikoni të ndërmerrni për të menaxhuar ndryshimet : </label>
        <textarea type="text" class="form-control" id="AktivitetePerNdryshim"> </textarea>
    </div>
    <div class="d-flex flex-row align-content-around pt-2 flex-md-row flex-column">
        <div class="col-md-6 mb-2 pe-2">
            <label class="pt-3">A keni nevojë për ndihmë?</label>
            <select class="form-select" id="gethelp">
                <option disabled selected>Zgjedhni opsionet... </option>
                <option value="#">Po</option>
                <option value="#">Jo</option>
            </select>
        </div>
        <div class="col-md-6 mb-2 pe-2">

            <label class="pt-3">Zgjedh/Shto ndihmën e nevojshme</label>
            <select class="form-select" id="inputGroupSelect03" asp-items="@ViewBag.NdihmaNevojshme">
               @* <option disabled selected>Ndihma e nevojshme</option>*@
                <option value="shto">Shto +</option>
            </select>
        </div>
    </div>
    <div class="form-group pe-2 pb-3 ">
        <label class="pt-3" for="NdihmaEKerkuar">Përshkruani arsyen e ndihmës së kërkuar dhe ndikimin e saj në sukses : </label>
        <textarea type="text" class="form-control" id="NdihmaEKerkuar"> </textarea>
    </div>
