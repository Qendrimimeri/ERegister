@model ResetPasswordVM;

<div class="container-fluid row justify-content-center align-items-center pt-5 mt-5" style="height:78vh">
    <div class="col-6 d-none d-md-block text-center ">
        <img src="/images/harta.svg" class="harta img-fluid " style="min-width:190px; max-width:450px;">
    </div>
    <div class="col-12 col-md-6 d-flex justify-content-center flex-column bg-light box-shadow ">
        <h4 class="text-center pt-5">Ndryshoni fjalëkalimin tuaj!</h4>
        <form asp-action="ResetPassword" asp-controller="Account" method="post">
            <div class=" p-5">
                <div class="mb-3">
                    <input - asp-for="Token" type="hidden" class="form-control" aria-describedby="emailHelp">
                    <input asp-for="UserId" type="hidden" class="form-control" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Fjalëkalimi i ri</label>
                  <div class="d-flex">

                    <input asp-for="NewPassword" type="password"  id="newPassword" class="form-control" aria-describedby="emailHelp">
                   <i class="bi bi-eye-slash fs-5" id="newTogglePassword" ></i>

                  </div>
                    
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Konfirmo fjalëkalimin</label>
                  <div class="d-flex">
                    <input asp-for="ConfirmPassword" type="password"  id="confirmPassword" class="form-control" aria-describedby="emailHelp">
                     <i class="bi bi-eye-slash fs-5" id="confirmTogglePassword" ></i>
                  </div>
                    @if (ViewBag.PasswordDoesntMatch == "Fjalëkalimi duhet të përputhet")
                    {
                        <small class="text-danger">Fjalëkalimi duhet të përputhet</small>
                    }
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block mt-3 w-100 py-0">VAZHDO</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/secutiry_stap_ResetPassword.js" asp-append-version="true"></script>
<style>
    #newTogglePassword, #confirmTogglePassword {
       margin-top:5px;
       margin-bottom:5px;
        margin-left: -30px;
        cursor: pointer;
    }
</style>
