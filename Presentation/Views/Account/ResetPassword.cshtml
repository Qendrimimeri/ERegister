@model ResetPasswordVM;

<link rel="stylesheet" href="~/cssViews/HomeIndex.css">
<div class="homeindex row justify-content-center align-items-center pb-5 pt-5 mxt-5" style="height: 75vh; margin-left:0px;margin-right:0px">

    <div class="col-6 d-none d-md-block text-center ">
        <img src="/images/harta.svg" class="harta img-fluid " alt="Harta" style="min-width:190px; max-width:450px;">
    </div>
    <div class="col-md-6 d-flex justify-content-center flex-column px-0 mx-0 box-shadow mobileb inputform">
        <h4 class="text-center pt-5">Ndrysho Fjalëkalimin</h4>
        <form class="ml-5" asp-controller="Account" asp-action="ResetPassword" method="post">

            <div class="p-5 ml-4 responziveMobile">
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Fjalëkalimi i ri</label>
                    <div class="d-flex">

                        <input asp-for="NewPassword" type="password" id="newPassword" class="form-control font-mobile" aria-describedby="emailHelp">
                        <i class="bi bi-eye-slash fs-5" id="newTogglePassword"></i>

                    </div>
                    </div>
                    <label asp-for="ConfirmPassword" class="form-label">Konfirmo fjalëkalimin</label>

                    <div class="mb-3">
                        <div class="d-flex align-items-center">
                            <input asp-for="ConfirmPassword" type="password" class="form-control font-mobile" id="confirmPassword" aria-describedby="passwordHelp">
                            <i class="bi bi-eye-slash fs-5" id="confirmTogglePassword"></i>
                        </div>
                        @if (ViewBag.PasswordDoesntMatch == "Fjalëkalimi duhet të përputhet")
                        {
                            <small class="text-danger">Fjalëkalimi duhet të përputhet</small>
                        }


                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block mt-3 w-100 py-0" id="continue">VAZHDO</button>
                </div>


        </form>
    </div>

    </div>
<script src="~/js/secutiry_stap_ResetPassword.js" asp-append-version="true"></script>
<style>
    #newTogglePassword, #confirmTogglePassword {
       margin-top:5px;
       margin-bottom:5px;
        margin-left: -30px;
        cursor: pointer;
    }
       @@media screen and (max-width:488px) {
        .test {
            display: flex;
            flex-flow: row wrap;
            justify-content: center;
            width: 100% !important;
        }
        .responziveMobile{
            padding:10px !important;
        }
        .font-mobile{
           font-size:16px;
            padding-top:7px !important;
            padding-bottom:7px !important;

        }
    }

    @@media screen and (max-width: 1800px) {
        #testManuali {
            max-width: 70%;
        }
    }

    @@media screen and (max-width: 600px) {
        #testManuali {
            max-width: 100%;
        }
    }
    @@media screen and (max-width:1240px) {
    .homeindex{
       /* margin-top:2px !important;*/
       padding-top:1px !important;
       padding-bottom:1px !important;

    }
}

 
</style>
