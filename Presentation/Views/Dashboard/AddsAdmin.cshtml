@{
    Layout = "_DashboardLayout";
}

<section class="section">
    <div class="row">
        <div class="col-lg-10">


            <div class="card">
                <div class="card-body p-5">
                    <h5 class="card-title">Krijo llogarinë për zyrtarin partisë dhe territorin përkatës</h5>
                    <form>
                        <div class="mb-4 d-flex justify-content-between">
                            <div class="col-6 pe-2">
                                <label class="form-label">Emri</label>
                                <input class="form-control" id="mbiemripersonal">
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Mbiemri</label>
                                <input class="form-control">
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <span>Nr.Tel</span>

                        <div class="mb-4">
                            <div class=" d-flex align-items-center mt-2">
                                <div class="col-2">
                                    <input type="text" class="form-control" id="prefix" value="+383">
                                </div>
                                <div class="col-10 ps-2">
                                    <input class="form-control" id="nrtel" type="number">
                                </div>
                            </div>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group pb-3">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1">
                        </div>
                        <div class="form-group pb-3">
                            <label for="InputFacebook">Facebook</label>
                            <input type="text" class="form-control" id="InputFacebook">
                        </div>
                        <div class="mb-4 d-flex justify-content-between">
                            <div class="col-4 pe-2">
                                <label class="form-label">Qyteti</label>
                                <select class="form-select" id="inputGroupSelect04">
                                    <option disabled selected>Zgjedh qytetin..</option>
                                    <option value="1">Prishtinë</option>
                                    <option value="2">Podujevë</option>
                                    <option value="3">Drenas</option>
                                </select>
                            </div>
                            <div class="col-4 pe-2">
                                <label class="form-label">Fshati/Lagjja</label>
                                <input class="form-control">
                                <span class="text-danger"></span>
                            </div>

                            <div class="col-4">
                                <label class="form-label">Blloku</label>
                                <input class="form-control">
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4 d-flex justify-content-between">
                            <div class="col-6 pe-2">
                                <label class="form-label">Pozita ne parti</label>
                                <select class="form-select" id="inputGroupSelect04">
                                    <option disabled selected>Zgjedh rolin..</option>
                                    <option value="1">Admin</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Zyrtari pergjegjës</label>
                                <input class="form-control">
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-4 mb-4">
                            <label class="form-label">Qendra e votimit</label>
                            <input class="form-control">
                            <span class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Regjistro</button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>