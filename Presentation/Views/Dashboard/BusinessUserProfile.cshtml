@using Domain.Data.Entities

@model ProfileVM
@{
    Layout = "_DashboardLayout"; 
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body p-5">
                    <h2 class="card-title ">Të dhënat personale</h2>
                    <form asp-action="BusinessUserProfile" asp-controller="Dashboard" enctype="multipart/form-data" method="post">
                        <hr>

                        <div class="text-center">
                            <img src="~/Document/@Model.ProfileImage" class="rounded" style="width:100px;" alt="...">
                        
                        </div>
                        <div class="text-center">
                            <h4>@Model.FullName</h4>
                        </div>
                        <div class="text-center pt-4">
                            <p><strong>Numri telefonit: </strong>@Model.PhoneNo</p>
                            <p><strong>Email adresa: </strong>@Model.Email</p>
                            <p><strong>Qyteti      : </strong>@Model.Municipality</p>
                            <p><strong>Fshati      : </strong>@Model.Village</p>
                          @*  <p><strong>Pozita në parti: </strong></p>*@
                            <p><strong>Qendra e votimit: </strong>@Model.PollCenter</p>
                        </div>

                        <h6 class="pt-4">Ndrysho të dhënat</h6>
                        <hr>

                        <div class="pe-2">
                            <div>
                                <label asp-for="Image" class="form-label">Ngarko foton e profilit</label>
                                <input asp-for="Image" class="form-control" type="file" id="formFile" onchange="preview()">
                          @*  <span asp-validation-for="Image" class="text-danger"></span>*@
                            </div>
                            <img id="frame" src="" class="img-fluid" />
                        </div>

                        <span>Numri i telefonit</span>
                        <div class="mb-4 pe-2">
                            <div class=" d-flex align-items-center ">
                                <div class="col-2">
                                    <input type="text" class="form-control" id="prefix" value="+383">
                                </div>
                                <div class="col-10 ps-2">
                                    <input class="form-control" type="number" asp-for="PhoneNo" placeholder="49123123">
                                </div>
                            </div>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group pb-3 pe-2">
                            <label for="exampleInputEmail1">Email adresa</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Email" placeholder="Shkruaj email adresen">
                        </div>
                        <div class="d-flex justify-content-around pe-2 flex-md-row flex-column">
                            <div class = "col-md-4 pt-4">
                                <button type="submit" class="btn btn-primary pe-2 ">Ndrysho të dhënat</button>
                            </div>
                            <div  class = "col-md-4 pt-4">
                                <a asp-action="ChangePassword" asp-controller="Dashboard" class="btn btn-primary pe-2">Ndrysho fjalëkalimin </a>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</section>
