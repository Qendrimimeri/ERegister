@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> _userManager
@inject IOptionsSnapshot<Roles> _roles;
@{
    Layout = "_DashboardLayout";
    var roles = _roles.Value;
}
@model RegisterVM;
<div>
    <div class="card">
        <div class="d-flex justify-content-center align-items-center position-relative mobileResponziveNameManual">
            <div class="me-3">
                <h4 class="text-center pt-4">
                    Mirë se vini <strong>
                        @((await
                        _userManager.FindByNameAsync(User.Identity.Name)).FullName)
                    </strong>
                </h4>
            </div>
            @if (User.IsInRole(roles.KryetarIPartise))
            {
                <div class="ps-2 position-absolute end-0 me-2 manualResponzive">
                    <partial name="_ManualiAdminDashboardPartial"></partial>
                </div>
            }
            @if (User.IsInRole(roles.KryetarIKomunes))
            {
                <div class="ps-2 position-absolute end-0 me-2">
                    <partial name="_ManualiKryetarKomunesDashboardPartial"></partial>
                </div>
            }
        </div>

        <hr />
        @if (User.IsInRole(roles.KryetarIPartise))
        {
            <div class="test d-flex justify-content-around p-2 pt-2">
                <div class="test pt-2">
                    <p>Zgjedhni qytetin për grafe:</p>
                </div>
                <div class=" mb-2 test ">
                    <select class="form-select" id="munis" onchange="getId()" asp-for="Municipality">
                        <option disabled selected>Zgjedh qytetin...</option>
                    </select>
                </div>
            </div>
        }
    </div>
</div>
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" id="city-nacinale"></h5>
                    <div id="columnChart"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" id="city-lokale"></h5>
                    <div id="columnChart1"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
        #newTogglePassword, #confirmTogglePassword{
            margin-left: -30px;
            cursor: pointer;
        }
        @@media screen and (max-width:488px) {
            .test {
                display: flex;
                flex-flow: row wrap;
                justify-content: center;
                width: 100% !important;
            }
        }
         @@media screen and (max-width:500px) {
           .manualResponzive{
                   position:relative !important;
                   
               }
            .mobileResponziveNameManual{
                justify-content:space-between!important;
         
            }
         }
        @@media screen and (max-width: 1800px){
            #testManuali{
                max-width:70%;
            }
        }
        @@media screen and (max-width: 600px){
            #testManuali{
                max-width:100%;
            }
        }
</style>
