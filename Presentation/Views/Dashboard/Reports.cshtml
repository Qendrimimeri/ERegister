@{
    Layout = "_DashboardLayout";
}

<h3>Menaxho</h3>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-body p-5">

                    <form>

                        <br />
                        <style>
                            th {
                                font-weight: 500;
                            }

                        </style>
                        <div class="d-flex flex-row justify-content-between">
                            <div class="col-6 pe-2">

                                <div class="col-">
                                    <p>Të dhënat nga regjistrimi</p>
                                    <table class="table table-bordered table table-responsive"
                                           id="dataTable"
                                           width="100%"
                                           cellspacing="0">
                                        <tr>
                                            <th>Emri dhe Mbiemri</th>
                                            <td>Filan Fisteku</td>

                                        </tr>
                                        <tr>
                                            <th>Numri i votuesve</th>
                                            <td>7</td>

                                        </tr>
                                        <tr>
                                            <th>Votues paraprak </th>
                                            <td>LDK</td>
                                        </tr>
                                        <tr>
                                            <th>Gjasat fillestare</th>
                                            <td>50%</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="col-6 pe-2">

                                <div class="col-">
                                    <p>Evidento ndryshimet me të dhënat e reja</p>
                                    <table class="table table-bordered table table-responsive"
                                           id="dataTable"
                                           width="100%"
                                           cellspacing="0">

                                        <tr>
                                            <th>Votues i tanishëm</th>
                                            <td>
                                                <select class="form-select border-0 py-0">
                                                    <option>VV</option>
                                                    <option>LDK</option>
                                                    <option>PDK</option>
                                                    <option>AAK</option>
                                                </select>
                                            </td>

                                        </tr>
                                        <tr>
                                            <th>Gjasat aktuale</th>
                                            <td>
                                                <select class="form-select border-0 py-0">
                                                    <option>0%</option>
                                                    <option>25%</option>
                                                    <option>50%</option>
                                                    <option>75%</option>
                                                    <option>100%</option>

                                                </select>
                                            </td>

                                        </tr>
                                        <tr>
                                            <th>Statusi aktual</th>
                                            <td>
                                                <select class="form-select border-0 py-0">
                                                    <option>Në proces</option>
                                                    <option>Përfunduar</option>
                                                </select>
                                            </td>
                                        </tr>








                                    </table>
                                </div>
                            </div>

                        </div>

                    </form>



                    <div class="mb-2 ml-5">
                        <label for="exampleFormControlTextarea1" class="form-label">Përshkruaj gjendjen ekzistuese dhe mundësit ose barrierat e suksesit:</label>
                        <textarea class="form-control ml-4" id="exampleFormControlTextarea1" rows="3"></textarea>

                    </div>
                    <div class="d-flex justify-content-end mb-2 mt-2 p-2">

                        <button type="button" class="btn btn-danger">Anulo</button>&nbsp;&nbsp;<button type="submit" class="btn btn-primary">Ruaj dhe Mbyll</button>
                    </div>



                </div>
            </div>
        </div>
    </div>
</section>
