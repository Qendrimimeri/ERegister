@model PersonVM
@{
    Layout = "_DashboardLayout";
}

<h3>Menaxho</h3>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-body p-5">

                    <form asp-controller="Dashboard" asp-action="Reports" method="post">

                        <br />
                        <style>
                            th {
                                font-weight: 500;
                            }

                        </style>
                        <div class="d-flex flex-row justify-content-between flex-md-row flex-column">
                            <div class="col-md-6 pe-2">

                                <div>
                                    <p>Të dhënat nga regjistrimi</p>
                                    <table class="table table-bordered table table-responsive"
                                           id="dataTable"
                                           width="100%"
                                           cellspacing="0">
                                        <tr>
                                            <th colspan="2">Emri dhe Mbiemri</th>
                                            <td colspan="2">@Model.FullName</td>
                                            
                                        </tr>
                                        <tr>
                                            <th colspan="2">Numri i votuesve</th>
                                            <td colspan="2">@Model.VotersNumber</td>

                                        </tr>
                                        <tr >
                                            <th >Votues paraprak </th>
                                            <td>@Model.CurrentVoter</td>
                                         
                                            <th >Gjasat fillestare</th>
                                            <td>@Model.ActualChances%</td>
                                            
                                        </tr>
                                     @*   <tr>
                                            <th>Gjasat fillestare</th>
                                            <td>@Model.ActualChances</td>
                                        </tr>*@
                                    </table>
                                    <input type="hidden" asp-for="@Model.Id" />
                                </div>
                            </div>
                            <div class="col-md-6 pe-2">

                                <div>
                                    <p>Evidento ndryshimet me të dhënat e reja</p>
                                    <table class="table table-bordered table table-responsive"
                                           id="dataTable"
                                           width="100%"
                                           cellspacing="0">
                                        <tr>
                                            <th style="font-size:15px;">Votues i tanishëm</th>
                                            <td>

                                                <select asp-for="CurrentVoter" asp-items="@ViewBag.PS" class="form border-0 w-100 "
                                                        id="inputGroupSelect01">
                                                    <option disabled selected>Zgjedh Partine</option>
                                                </select>
                                            </td>

                                        </tr>
                                        <tr>
                                            <th>Gjasat aktuale</th>
                                            <td>


                                                <select asp-for="ActualChances" asp-items="@ViewBag.successChances" class="form border-0 w-100">
                                                    <option disabled selected>Zgjedh Gjasat e Suksesit</option>
                                                </select>
                                            </td>

                                        </tr>
                                        <tr>
                                            <th>Statusi aktual</th>
                                            <td>

                                                <select asp-for="ActualStatus" asp-items="@ViewBag.actualStatus" class="form border-0 w-100 "
                                                        id="inputGroupSelect01">
                                                    <option disabled selected>Zgjedh Statusin</option>
                                                </select>
                                            </td>
                                            
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="mb-2 ml-5">
                            <label for="exampleFormControlTextarea1" class="form-label">Përshkruaj gjendjen ekzistuese dhe mundësit ose barrierat e suksesit:</label>
                            <textarea asp-for="GeneralDescription" class="form-control ml-4" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="d-flex justify-content-end mb-2 mt-2 p-2">
                            <button type="submit" class="btn btn-primary">Ruaj dhe Mbyll</button>
                            <button class="btn btn-danger mx-3"> <a asp-action="Performance" asp-controller="Dashboard" class="text-white">Anulo</a></button>
                        </div>

                    </form>



                </div>
            </div>
        </div>
    </div>
</section>
