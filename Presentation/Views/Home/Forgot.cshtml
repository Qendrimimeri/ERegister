 @model EmailVM;


<div class="container-fluid row justify-content-center align-items-center pt-5 mt-5">
    <div class="col-6 d-none d-md-block text-center ">
        <img src="/images/harta.svg" class="harta img-fluid " style="min-width:190px; max-width:450px;">
    </div>
    <div class="col-12 col-md-6 d-flex justify-content-center flex-column bg-light box-shadow ">
        <h4 class="text-center pt-5">Gjeni llogarinë tuaj</h4>
        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
			<div class=" p-5">
			    <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Adresa</label>
                    <input type="email" asp-for="Email" class="form-control" aria-describedby="emailHelp">
                    <span asp-validation-for="Email" class="text-center"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block mt-3 w-100 py-0">VAZHDO</button>
			</div>
		</form>
    </div>
</div>

