@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> _userManager;
@inject IOptionsSnapshot<Roles> _roles;
@inject RoleManager<IdentityRole> _roleManager;
@inject IUnitOfWork _unitOfWork;

@{
    Roles roles = _roles.Value;
    var userRole = User.Identities.FirstOrDefault().Claims.Select(x => x.Value).Skip(4).Take(1).FirstOrDefault();
    var roleConfig = userRole.Replace("I", " i ").ToLower().Capitalize();
    var userName = await _userManager.FindByNameAsync(User.Identity.Name);
    var userMuniName = await _unitOfWork.Municipality.GetMuniName(userName.Id);
    var neighboorhoodName = await _unitOfWork.Neighborhood.GetNeigborhoodName(userName.Id);
    var villageName = await _unitOfWork.Village.GetVillageName(userName.Id);

}
<!DOCTYPE html>
<html lang="en">
.
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Vota - Dashboard</title>
    <link rel="icon" href="~/images/e-registerlogo64.svg"/>
    <link rel="apple-touch-icon" href="~/images/e-registerlogo128.svg"/>
    <meta content="Vota" name="description">
    <meta content="Vota" name="keywords">
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/dashboard-admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/dashboard-admin/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/dashboard-admin/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/dashboard-admin/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/dashboard-admin/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/dashboard-admin/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/dashboard-admin/vendor/simple-datatables/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link href="~/dashboard-admin/css/style.css" rel="stylesheet">
</head>
<body>
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between gap-5">
            <a asp-controller="Dashboard" asp-action="index" class="d-none d-md-block d-flex align-items-center">
                <img src="~/images/E-Vota.svg" style="width:150px" alt="ERegister">
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->
        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown">
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/Document/@((await _userManager.FindByNameAsync(User.Identity.Name)).ImgPath)" alt="Profile" class="rounded-circle img-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2"></span>
                    </a><!-- End Profile Iamge Icon -->
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                                   @if (User.IsInRole(roles.KryetarIPartise))
                                {
                                <h6>@(userName.FullName)</h6>
                                <span>@(roleConfig)</span>
                                <br />
                                  
                                }

                                else if (User.IsInRole(roles.KryetarIKomunes))
                                {
                                <h6>@(userName.FullName)</h6>
                                <span>@(roleConfig)</span>
                                <br />
                                    <span>Qyteti: <strong>@userMuniName</strong></span>
                                }
                                else if( User.IsInRole(roles.KryetarIFshatit))
                                {
                                <h6>@(userName.FullName)</h6>
                                <span>@(roleConfig)</span>
                                <br />
                                 <span>Fshati: <strong>@villageName</strong></span>
                                <br />
                                <span>Qyteti: <strong>@userMuniName</strong></span>
                                    
                                }
                                else 
                                {
                                <h6>@(userName.FullName)</h6>
                                <span>Anëtar</span>
                                <br />
                                 <span>Lagja:  <strong>@neighboorhoodName</strong></span>
                                <br />
                                <span>Qyteti: <strong>@userMuniName</strong></span>
                                }
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="Dashboard" asp-action="BusinessUserProfile">
                                <i class="bi bi-person"></i>
                                <span>Profili im</span>
                            </a>
                        </li>
                            <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="Dashboard" asp-action="ChangePassword">
                                <i class="bi bi-lock"></i>
                                <span>Ndrysho fjalëkalimin</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                      
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                      
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button class="dropdown-item d-flex align-items-center" href="#">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Dil</span>

                            </form>
                        </li>
                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->
                <!-- End Header -->
            </ul>
        </nav><!-- End Icons Navigation -->
    </header>
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav mb-auto" id="sidebar-nav">
            @if (User.IsInRole(roles.KryetarIPartise) || User.IsInRole(roles.KryetarIKomunes))
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-grid"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
            }
            @if (User.IsInRole(roles.KryetarIPartise) || User.IsInRole(roles.KryetarIKomunes) || User.IsInRole(roles.KryetarIFshatit))
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Crm" asp-action="Index">
                        <i class="bi bi-search"></i>
                        <span>CRM</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Dashboard" asp-action="Performance">
                        <i class="bi bi-graph-up"></i>
                        <span>Performanca & Raporti</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-toggle="collapse" href="#" data-bs-target="#components-addsadmin">
                        <i class="bi bi-person-square"></i> <span>Adds & Admin</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="components-addsadmin" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                        <li>
                            <a asp-controller="AddsAdmin" asp-action="AddVoter">
                                <i class="bi bi-circle"></i><span>Regjistro votues</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="AddsAdmin" asp-action="PoliticalOffical">
                                <i class="bi bi-circle"></i><span>Regjistro zyrtar </span>
                            </a>
                        </li>
                    </ul>
                </li>
            }
            @if (User.IsInRole(roles.AnetarIThjeshte))
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="AddsAdmin" asp-action="AddVoter">
                        <i class="bi bi-person-square"></i>
                        <span>Regjistro votuesin e ri</span>
                    </a>
                </li>
            }
            <li class="mt-5">
                <form asp-controller="Account" asp-action="Logout">
                    <button class="dropdown-item d-flex align-items-center nav-link collapsed">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Dil</span>
                    </button>

                </form>
            </li>
        </ul>
    </aside><!-- End Sidebar-->
    <main id="main" class="main">
        <div class="pagetitle">
        </div><!-- End Page Title -->
        <section class="section dashboard">
            <div class="">
                <partial name="_Notifications" />
                @RenderBody()
            </div>
        </section>
    </main><!-- End #main -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; <strong><span>Vota.live</span></strong>. Të  gjitha të drejtat e rezervuara
        </div>
        <div class="credits">
        </div>
    </footer><!-- End Footer -->
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/dashboard-admin/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/dashboard-admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dashboard-admin/vendor/chart.js/chart.min.js"></script>
    <script src="~/dashboard-admin/vendor/echarts/echarts.min.js"></script>
    <script src="~/dashboard-admin/vendor/quill/quill.min.js"></script>
    <script src="~/dashboard-admin/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/dashboard-admin/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/dashboard-admin/vendor/php-email-form/validate.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
            crossorigin="anonymous"></script>
    <script src="~/dashboard-admin/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_ValidationScriptsPartial" />
</body>
</html>


