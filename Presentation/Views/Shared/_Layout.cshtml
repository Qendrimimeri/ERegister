        @RenderBody()
    </div>
   

    <div class="container tablet">
        <hr />
        <footer class="text-center text-lg-start text-muted">


            <div class="h-100 text-center text-dark m-2 " style="background-color: rgba(248, 244, 246, 0.8);">
