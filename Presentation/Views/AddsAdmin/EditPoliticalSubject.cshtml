@{
    Layout = "_DashboardLayout";

}
<style>
    .delete-form {
        display:inline;
    }
    .delete-form button {
        border:none;
        background-color:transparent;
        color: red;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <a asp-controller="AddsAdmin" asp-action="AddPoliticalSubject" class="btn btn-primary">Shto</a>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model != null)
            {
                <div class="card">
                    <div class="card-body">

                        <h5 class="card-title">Lista me Zyrtare</h5>


                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Nr</th>
                                    <th scope="col">Role Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                                <tbody>
                                  
                                </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body pb-1">
                        <h5 class="card-title">Per te shtuar zyrtar te rinje klikoni mbi butonin Shto</h5>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
