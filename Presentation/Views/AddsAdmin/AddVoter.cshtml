
@{
    Layout = "_DashboardLayout";
}

<section class="section">
      <div class="row">
        <div class="col-lg-12">

           
              <div class="card">
                <div class="card-body p-5">
                     <h2 class="card-title ">Regjistro të dhënat për votuesin</h2>
                    <form>
                        <h6 class = "pt-4">I - Të dhënat personale</h6><hr/>
                       <div class="mb-4 d-flex justify-content-between">
                        <div class="col-12 pe-2">
                            <label class="form-label">Emri dhe Mbiemri</label>
                            <input  class="form-control" id="mbiemripersonal" placeholder="Shkruaj emrin dhe mbiemrin">
                            <span class="text-danger"></span>
                        </div>
                            
                        </div>

                        <span>Nr.Tel</span>

                        <div class="mb-4">
                        <div class=" d-flex align-items-center mt-2">
                            <div class="col-2">
                                <input type="text" class="form-control" id="prefix" value="+383" >
                            </div>
                            <div class="col-10 ps-2">
                                <input class="form-control" id="nrtel" type="number" placeholder="49123123">
                            </div>
                        </div>
                         <span  class="text-danger"></span>
                        </div>
                      <div class="form-group pb-3">
                        <label for="exampleInputEmail1">Email adresa</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Shkruaj email adresen">
                      </div>
                       <div class="form-group pb-3">
                        <label for="InputFacebook">Facebook</label>
                        <input type="text" class="form-control" id="InputFacebook">
                      </div>
                      <div class="mb-4 d-flex justify-content-between">
                        <div class="col-6 pe-2">
                            <label class="form-label">Qyteti</label>
                                <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.municipalities">
                                <option disabled selected>Zgjedh qytetin..</option>
                             </select>
                        </div>
                            <div class="col-6 pe-2">
                               <label class="form-label">Fshati</label>
                            <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.villages">
                                <option disabled selected>Zgjedh fshatin..</option>
                             </select>
                            </div>
                        </div>

                         <div class="mb-4 d-flex justify-content-between">
                        
                            <div class="col-4 pe-2">
                                <label class="form-label">Lagja</label>
                                <select class="form-select" id="inputGroupSelect04" onchange="location=this.value;" asp-items="@ViewBag.neigborhoods">
                                <option disabled selected>Zgjedh lagjen..</option>
                                <option value="/AddsAdmin/AddNeighborhood">Shto +</option>
                             </select>
                              @*<a asp-controller = "Address" asp-action = "AddNeighborhood"  class="link-primary">Shto +</a>*@
                            </div>
                             <div class="col-4 pe-2">
                                <label class="form-label">Rruga/Blloku</label>
                                <select class="form-select" id="inputGroupSelect04" onchange="location=this.value;" asp-items="@ViewBag.streets">
                                <option disabled selected>Zgjedh rrugen/bllokun..</option>
                                    <option value="/AddsAdmin/AddBlock">Shto +</option>
                             </select>
                              @*<a asp-controller = "Address" asp-action = "AddBlock"  class="link-primary">Shto +</a>*@
                            </div>
                            <div class="col-4 pe-2">
                                <label class="form-label">Numri i shtëpisë</label>
                                <input class="form-control" placeholder="opsionale">
                                <span  class="text-danger"></span>
                            </div>
                        </div>

                        <h6 class = "pt-4">II - Të dhënat profesionale</h6><hr/>

                        <div class="mb-4 d-flex justify-content-between">
                        
                            <div class="col-4 pe-2">
                                <label class="form-label">Vendi i punës</label>
                                <input class="form-control">
                                <span  class="text-danger"></span>
                            </div>
                            <div class="col-4 pe-2">
                                <label class="form-label">Shërbimi:</label>
                                <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.administrativeUnits">
                                    <option disabled selected>Zgjedh shërbimin..</option>
                                 </select>
                             </div>
                            <div class="col-4">
                                <label class="form-label">Detyra</label>
                                <input class="form-control">
                                <span  class="text-danger"></span>
                            </div>
                        </div>
                     
                      <h6 class = "pt-4">III - Të dhënat partiake<hr/></h6>

                        <div class="mb-4 d-flex justify-content-between">
                            <div class="col-4 pe-2">
                                <label for="FamilyMember" class = "form-label">Nr i Anetareve</label>
                                 <input type="number" class="form-control" id="FamilyMember">
                            </div>
                            <div class="col-4 pe-2">
                                 <label class="form-label">Gjasat e suksesit fillestar:</label>
                                <select class="form-select" id="inputGroupSelect05" placeorder="Zgjedh gjasat.." asp-items="@ViewBag.successChances">
                                     </select>
                            </div>
                            <div class="col-4">
                                <label class="form-label">Votues i tanishëm..</label>
                                <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.PS">
                                <option disabled selected>Zgjedh partinë..</option>
                             </select>
                            </div>
                        </div>


                      
                      <button type="submit" class="btn btn-primary">Regjistro</button>
                    </form>
            
                </div>
              </div>

            </div>
          </div>
    </section>
