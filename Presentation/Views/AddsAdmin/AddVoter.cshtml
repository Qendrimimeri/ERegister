@{
    Layout = "_DashboardLayout";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">


            <div class="card">
                <div class="card-body p-5">
                    <h2 class="card-title ">Regjistro të dhënat për votuesin</h2>
                    <form>
                        <h6 class="pt-4">I - Të dhënat personale</h6>
                        <hr>
                        <div class="mb-4 d-flex pe-2 justify-content-between">
                            <div class="col-12 p">
                                <label class="">Emri dhe Mbiemri</label>
                                <input class="form-control" id="mbiemripersonal" placeholder="Shkruaj emrin dhe mbiemrin">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <span>Nr.Tel</span>
                        <div class="mb-4 pe-2">
                            <div class=" d-flex align-items-center">
                                <div class="col-2">
                                    <input type="text" class="form-control" id="prefix" value="+383">
                                </div>
                                <div class="col-10 ps-2">
                                    <input class="form-control" id="nrtel" type="number" placeholder="49123123">
                                </div>
                            </div>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group pb-3">
                            <label for="exampleInputEmail1">Email adresa</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Shkruaj email adresen">
                        </div>
                        <div class="form-group pb-3">
                            <label for="InputFacebook">Facebook</label>
                            <input type="text" class="form-control" id="InputFacebook">
                        </div>
                        <div class="mb-4 d-flex justify-content-between">
                            <div class="col-4 pe-2">
                                <label>Qyteti</label>
                                <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.municipalities">
                                    <option disabled selected>Zgjedh qytetin..</option>
                                </select>
                            </div>
                            <div class="col-4 pe-2">
                                <label>Fshati</label>
                                <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.villages">
                                    <option disabled selected>Zgjedh fshatin..</option>
                                </select>
                            </div>
                            <div class="col-4 pe-2">
                                <label>Lagja</label>
                                <select class="form-select" id="inputGroupSelect01" asp-items="@ViewBag.neigborhoods">
                                    <option disabled selected>Zgjedh lagjen..</option>
                                    <option value="shto1">Shto +</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4 d-flex justify-content-between ">

                            <div class="col-4 pe-2">
                                <label>Rruga</label>
                                <select class="form-select" id="inputGroupSelect05" asp-items="@ViewBag.streets">
                                    <option disabled selected>Zgjedh rrugën..</option>
                                    <option value="shto">Shto +</option>
                                </select>
                            </div>
                            <div class="col-4 pe-2">
                                <label>Blloku</label>
                                <select class="form-select" id="inputGroupSelect05" asp-items="@ViewBag.streets">
                                    <option disabled selected>Zgjedh bllokun..</option>
                                    <option value="shto">Shto +</option>
                                </select>
                            </div>
                            <div class="col-4 pe-2">
                                <label class="">Numri i shtëpisë</label>
                                <input class="form-control" placeholder="opsionale">
                                <span class="text-danger"></span>
                            </div>
                        </div>



                        <h6 class="pt-4">II - Të dhënat profesionale</h6><hr>

                        <div class="mb-4 d-flex justify-content-between ">

                            <div class="col-4 pe-2">
                                <label class="">Vendi i punës</label>
                                <input class="form-control">
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-4 pe-2">
                                <label>Shërbimi:</label>
                                <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.administrativeUnits">
                                    <option disabled selected>Zgjedh shërbimin..</option>
                                </select>
                            </div>
                            <div class="col-4 pe-2">
                                <label class="l">Detyra</label>
                                <input class="form-control">
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <h6 class="pt-4">III - Të dhënat partiake<hr></h6>

                        <div class="mb-4 d-flex justify-content-between ">
                            <div class="col-6 pe-2">
                                <label for="FamilyMember" class="">Nr i Anetareve</label>
                                <input type="number" class="form-control" id="FamilyMember">
                            </div>
                            <div class="col-6 pe-2">
                                <label>Gjasat e suksesit fillestar:</label>
                                <select class="form-select" id="inputGroupSelect05" placeorder="Zgjedh gjasat.." asp-items="@ViewBag.successChances">
                                </select>
                            </div>

                        </div>
                        <div class="mb-4 d-flex justify-content-between ">
                            <div class="col-6 pe-2">
                                <label>Votues i tanishëm..</label>
                                <select class="form-select" id="inputGroupSelect04" asp-items="@ViewBag.PS">
                                    <option disabled selected>Zgjedh partinë..</option>
                                </select>
                            </div>
                            <div class="col-6 pe-2">
                                <label>Qendra e votimit</label>
                                <select class="form-select" id="pollselector" >
                                    <option disabled selected>Zgjedh qendren e votimit..</option>
                                    <option value="shto2">Shto +</option>
                                    <option value="#">1250E</option>
                                    <option value="#">1222A</option>
                                    <option value="#">3542Y</option>
                                </select> 
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary pe-2">Regjistro</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
<script>
    const selectElement1 = document.querySelector('#inputGroupSelect05');

    selectElement1.addEventListener('change', (event) => {
      const result = event.target.value;
      if (result === "shto"){
          prompt("Shto Rruge te re")
      }
    });

    const selectElement2 = document.querySelector('#inputGroupSelect01');

    selectElement2.addEventListener('change', (event) => {
      const result = event.target.value;
      if (result === "shto1"){
          prompt("Shto Lagje te re");
      }

    });

    const selectElement3 = document.querySelector('#pollselector');

    selectElement3.addEventListener('change', (event) => {
      const result = event.target.value;
      if (result === "shto2"){
          prompt("Shto qender të re votimi");
      }

    });

</script>

}
